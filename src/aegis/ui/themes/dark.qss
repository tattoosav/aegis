    background-color: #1a1a2e;
    color: #e0e0e0;
}

QMessageBox QLabel {
    color: #e0e0e0;
    font-size: 13px;
}


/* ---------------------------------------------------------------------------
   Status-indicator dots (assign via objectName or property)
   --------------------------------------------------------------------------- */
QLabel#indicatorOnline {
    background-color: #2ecc71;
    border-radius: 6px;
