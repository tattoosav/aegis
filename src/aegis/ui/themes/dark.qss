/* ---------------------------------------------------------------------------
   Metric / stat cards (for dashboard overview)
   --------------------------------------------------------------------------- */
QFrame#metricCard {
    background-color: #1e2a3a;
    border: 1px solid #2a3a50;
    border-radius: 10px;
    padding: 16px;
}

QFrame#metricCard:hover {
    border-color: #4e9af5;
    background-color: #243447;
}

QFrame#metricCard QLabel#metricValue {
    font-size: 28px;
    font-weight: bold;
    color: #ffffff;
}

QFrame#metricCard QLabel#metricLabel {
    font-size: 12px;
    color: #8899aa;
    font-weight: 500;
    text-transform: uppercase;
}


